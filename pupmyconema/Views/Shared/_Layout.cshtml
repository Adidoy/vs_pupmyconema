<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title :: PUP MycoNema Bank</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="banner">
        <div class="hidden-xs">
            <div class="row" style="margin-right:0px;">
                <div class="col-md-1">
                    <br />
                </div>
                <div class="col-md-1 text-center">
                    <img src="~/Content/images/logo.png" />
                </div>
                <div>
                    <div>
                        <h3>Polytechnic University of the Philippines</h3>
                        <h1>MycoNema Bank</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PUP MyconNema Bank", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        @RenderBody()
        <hr />

    </div>
    <footer class="footer" style="margin-bottom:0px; margin-left:0px; margin-right:0px;">
        <div class="row" style="margin-right:0px; margin-bottom:0px;">
            <div class="col-md-3">
                <br />
            </div>
            <div class="col-md-3">
                <h4>Links</h4>
                <br /><br />
            </div>
            <div class="col-md-3">
                <h4>External Links</h4>
                <br /><br />
            </div>
            <div class="col-md-3">
                <br />
            </div>
        </div>
        <p style="text-align:center; margin-bottom:0px; font-family:'Roboto Thin'; font-size:10pt;">&copy; @DateTime.Now.Year - PUP Myconema Bank</p>
        <br />
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
