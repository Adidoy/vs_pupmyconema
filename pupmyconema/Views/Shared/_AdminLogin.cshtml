<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title :: PUP MycoNema Bank</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="banner">
        <div class="hidden-xs">
            <div class="row" style="margin-right:0px;">
                <div class="col-md-1">
                    <br />
                </div>
                <div class="col-md-1 text-center">
                    <img src="~/Content/images/logo.png" />
                </div>
                <div>
                    <div>
                        <h3>Polytechnic University of the Philippines</h3>
                        <h1>MycoNema Bank</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        @RenderBody()
        <hr />

    </div>
    <footer class="footer-style">
        <div class="col-md-12" style="margin:0px;">
            <div class="row" style="margin-right:0px;">
                <div class="col-md-3">
                    <br />
                </div>
                <div class="col-md-3">
                    <h4>Links</h4>
                    <br /><br />
                </div>
                <div class="col-md-3">
                    <h4>External Links</h4>
                    <br /><br />
                </div>
                <div class="col-md-3">
                    <br />
                </div>
            </div>
            <p style="text-align:center; margin-bottom:0px; font-family:'Roboto Thin'; font-size:10pt;">&copy; @DateTime.Now.Year - PUP Myconema Bank</p>
            <br />
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
