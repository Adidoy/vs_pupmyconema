<div class="user-panel">
    <div class="pull-left image">
        <img src="~/Content/images/user.png"  class="img-circle" alt="User Image">
    </div>
    <div class="pull-left info">
        <p>@TempData["FullName"]</p>
        <!-- Status -->
        @if (Request.IsAuthenticated)
        {
            using (Html.BeginForm("LogOut", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right"}))
            {
                @Html.AntiForgeryToken()
                <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i> Logout</a>
            }
        }
    </div>
</div>